<% if @article.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8'>
      <h4>Could not be saved because of the following errors: </h4>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %> </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<ul class="navbar navbar-fixed-top">
  <li>
    <%= link_to "Knowledgebase", root_path, :class => 'brand' %>
  </li>
</ul>

<% if logged_in? %>
  <!-- Downtime Forms dropdown menu !-->
  <div class='btn-group nav_item'>
      <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
        Downtime Forms <span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu' role='menu'>
          <li>
             <%= link_to 'Compliance', '#' %>
          </li>
          <li>
             <%= link_to 'General Liability', '#' %>
          </li>
          <li>
             <%= link_to 'Worker\'s Comp', '#' %>
          </li>
          <li>
             <%= link_to 'Auto Liability', '#' %>
          </li>
          <li>
             <%= link_to 'CCQ', '#' %>
          </li>
          <li>
             <%= link_to 'AIR', '#' %>
          </li>
      </ul>
  </div>
  <div class='nav_item'>
    <%= link_to 'New Article', new_article_path, class: 'btn btn-success btn-small' %>
  </div>
  <div class='nav_item navbar-right'>
    <%= link_to "#{current_user.username} - Logout", logout_path(current_user), class: 'btn btn-warning btn-small' %>
  </div>
<% else %>
  <div class='nav_item'>
    <%= link_to 'Register', register_path, class: 'btn btn-primary btn-small' %>
  </div>
  <div class='nav_item'>
    <%= link_to 'Log in', login_path, class: 'btn btn-primary btn-small' %>
  </div>
<% end %>
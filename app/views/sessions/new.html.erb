<%= render 'shared/form_heading', title: 'Log in' %>


<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :email %><br>
      <%= email_field_tag :username, params[:username] || '' %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %><br>
      <%= password_field_tag :password, params[:password] || '' %>
    </div>
      <%= submit_tag "Login", class: 'btn btn-success' %>
  <% end %>
</div>
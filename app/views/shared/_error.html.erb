<% if form.errors.any? %>
  <div class='row'>
    <div class='alert alert-dismissible alert-danger'>
      <h4>Could not be saved because of the following errors: </h4>
      <ul>
        <% form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
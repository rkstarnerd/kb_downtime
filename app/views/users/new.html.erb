<%= render 'shared/form_heading', title: 'Register' %>

<div class='well'>
  <%= form_for @user do |f| %>
  <%= render 'shared/error', form: @user %>
  <div class='control-group'>
    <%= f.label :email %><br>
    <%= f.email_field :username %>
  </div>
  <div class='control-group'>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Register", class: 'btn btn-success' %>
  <% end %>
</div>